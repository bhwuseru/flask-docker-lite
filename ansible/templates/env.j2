PROJECT_NAME="{{ project_name }}"
COMPOSE_PROJECT_NAME="{{ project_name }}"
PROJECT_ROOT="{{ lookup('pipe', 'pwd') }}"
PROJECT_NAME_DIR_PATH="{{ lookup('pipe', 'pwd') }}/.{{ project_name }}"
